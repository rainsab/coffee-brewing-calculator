{% extends '_base.njk' %}


{% block content %}  
    <main class="container">
    <h1>Coffee brewing calculator</h1>
        <div class="row">
            <div class="col">
                <div class="group">
                    <label for="beans">Coffee beans</label>
                    <input type='number' id="beans" min='' max=''><span>g</span>
                </div>
            </div>

            <div class="col">
                <div class="group">
                    <label for="water">Water</label>
                    <input type='number' min='' max=''><span>ml</span>
                </div>
            </div>

            <div class="col">
                <div class="group">
                    <label for="ratio">Ratio</label>
                    <input type='number' id="ratio" min='' max=''><span>: 1</span>
                </div>
            </div>

            <div class="col">
                <div class="group">
                    <label for="yield">Coffee yield</label>
                    <input type='number' min='' max=''><span>ml</span>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
